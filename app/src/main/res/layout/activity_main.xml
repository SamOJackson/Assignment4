<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/VehicleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#CFCCCC"
        android:text="@string/carName1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="400dp"
        android:layout_height="508dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Vehicle1"
                android:layout_width="148dp"
                android:layout_height="148dp" />

            <ImageView
                android:id="@+id/Vehicle2"
                android:layout_width="148dp"
                android:layout_height="148dp" />

            <ImageView
                android:id="@+id/Vehicle3"
                android:layout_width="148dp"
                android:layout_height="148dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Vehicle4"
                android:layout_width="wrap_content"
                android:layout_height="148dp" />

            <ImageView
                android:id="@+id/Vehicle5"
                android:layout_width="148dp"
                android:layout_height="148dp" />

            <ImageView
                android:id="@+id/Vehicle6"
                android:layout_width="148dp"
                android:layout_height="148dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Vehicle7"
                android:layout_width="148dp"
                android:layout_height="148dp" />

            <ImageView
                android:id="@+id/Vehicle8"
                android:layout_width="148dp"
                android:layout_height="148dp" />

            <ImageView
                android:id="@+id/Vehicle9"
                android:layout_width="148dp"
                android:layout_height="148dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>