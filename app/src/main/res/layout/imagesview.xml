<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/redcar2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/carscar2"
        app:layout_constraintEnd_toStartOf="@+id/yellowcar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/redcar" />

    <ImageView
        android:id="@+id/yellowcar2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="65dp"
        app:layout_constraintBottom_toBottomOf="@+id/redcar2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/redcar2"
        app:layout_constraintTop_toTopOf="@+id/redcar2"
        app:srcCompat="@drawable/yellowcar" />

    <ImageView
        android:id="@+id/carscar2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="372dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/redcar2"
        app:layout_constraintStart_toStartOf="@+id/redcar2"
        app:layout_constraintTop_toBottomOf="@+id/redcar2"
        app:srcCompat="@drawable/carscar" />
</androidx.constraintlayout.widget.ConstraintLayout>